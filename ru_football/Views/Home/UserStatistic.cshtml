@model ru_football.Models.UserStatsModel

@{
    ViewBag.Title = "user statistic";
}


@using (Html.BeginForm())
{
    @Html.LabelFor(x => x.Name)
    <span>&nbsp;</span>
    @Html.TextBoxFor(x => x.Name, new { style = "width:500px;" });
    <input type="submit" value="submit" />
}

@if (Model != null && Model.Result != null)
{
    <script src="../../Scripts/Chart.js"></script>

    <div style="max-width: 800px; max-height: 400px;">
        <canvas id="myChart" width="800" height="400"></canvas>
    </div>
        <script>
var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: [@Html.Raw(string.Join(",", Model.Result.Keys))],
        datasets: [{
            label: 'очки в туре',
            data: [@Html.Raw(string.Join(",", Model.Result.Values))],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
    </script>
}