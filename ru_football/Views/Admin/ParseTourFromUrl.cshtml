@model ru_football.Models.ParseUrlModel

@{
    ViewBag.Title = "parse url";
}

@using (Html.BeginForm())
{
    @Html.LabelFor(x => x.Url)
    <span>&nbsp;</span>
    @Html.TextBoxFor(x => x.Url, new { style = "width:500px;" });
    <input type="submit" value="submit" />
}

@if (Model != null && Model.Result != null)
{
    @Html.Raw(Model.Result.Replace(Environment.NewLine, "<br/>"))
}